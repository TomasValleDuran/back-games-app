{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@generated/*": ["generated/*"],
      "@user/*": ["src/user/*"],
      "@firebase/*": ["src/firebase/*"],
      "@prisma/*": ["src/prisma/*"],
      "@lobby/*": ["src/lobby/*"],
      "@game/*": ["src/game/*"]
    }
  }
}
