generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  firebaseUid  String   @unique
  email        String   @unique
  username     String   @unique
  displayName  String
  photoURL     String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([firebaseUid])
  @@index([email])
}

// Lobbies and Games are now in Firestore
// This schema only contains persistent user data
